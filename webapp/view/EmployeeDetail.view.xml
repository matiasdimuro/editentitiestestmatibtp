				</subSections>
			</ObjectPageSection>
		</sections>

        <footer>
			<m:OverflowToolbar>
                <m:Title text="Are you sure to save changes?" />
				<m:ToolbarSpacer />
				<m:Button type="Accept" text="Accept"/>
				<m:Button type="Reject" text="Reject"/>
			</m:OverflowToolbar>
		</footer>
        
	</ObjectPageLayout>


</mvc:XMLView>