<mvc:XMLView
	controllerName="hexagon.editentitytestmatibtp.controller.EmployeeDetail"
    id="employeeDetailView"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
    xmlns="sap.uxap"
    xmlns:m="sap.m">

    <!-- useIconTabBar="true" -->
    <ObjectPageLayout 
        id="employeeDetailPageLayout"
		enableLazyLoading="true"
		useIconTabBar="true"
		showTitleInHeaderContent="true"

        showEditHeaderButton="true"
        showFooter="true">
        
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{employees>FirstName} {employees>FirstName}" wrapping="true"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Avatar src="./drawables/picture.jpg" class="sapUiTinyMarginEnd"/>
						<m:Title text="{employees>FirstName} {employees>FirstName}" wrapping="true" />
					</m:FlexBox>
				</snappedHeading>

				<expandedContent>
					<m:Text text="{employees>Title}"/>
				</expandedContent>

				<snappedContent>
					<m:Text text="Senior UI Developer"/>
				</snappedContent>

				<snappedTitleOnMobile>
					<m:Title text="Senior UI Developer"/>
				</snappedTitleOnMobile>

				<actions>
					<m:Button 
						text="Edit" 
						type="Emphasized"
						press=".toggleFooter"/>
					<m:Button 
						type="Transparent" 
						text="Go back" 
						icon="sap-icon://nav-back" 
						press=".onBackMaster"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:Avatar class="sapUiSmallMarginEnd" displaySize="L" />
		</headerContent>

        <sections>
			<ObjectPageSection id="personalFileSection" title="Personal File">
            <!-- <heading>
                <m:Title text="Heading ObjectPageSection" />
            </heading> -->
			<subSections>
                <ObjectPageSubSection id="addressSubsection" title="Address">
					<!-- <actions>
						<m:Button text="asas" />
					</actions> -->
					<blocks>
						<m:Text text="Adress form"></m:Text>
					</blocks>
				</ObjectPageSubSection>
				<ObjectPageSubSection id="contactSubsection" title="Contact">
					<!-- <actions>
						<m:Button text="asas" />
					</actions> -->
					<blocks>
						<m:Text text="Contact form"></m:Text>
					</blocks>
				</ObjectPageSubSection>
				<ObjectPageSubSection id="generalSubsection" title="General">
					<!-- <actions>
						<m:Button text="asas" />
					</actions> -->
					<blocks>
						<m:Text text="General form"></m:Text>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
			</ObjectPageSection>

			<ObjectPageSection id="jobFileSection" title="Job file">
            <!-- <heading>
                <m:Title text="Heading ObjectPageSection22222" />
            </heading> -->
				<subSections>
					<ObjectPageSubSection id="occupation" title="Occupation">
						<blocks>
							<m:Text text="Occupation subsection"></m:Text>
						</blocks>
					</ObjectPageSubSection>
					<ObjectPageSubSection id="general" title="General">
						<blocks>
							<m:Text text="General subsection"></m:Text>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection id="aboutSection" title="About">
				<subSections>
					<ObjectPageSubSection id="descriptionSubsection" title="Description">
						<blocks>
							<m:Text text="Description subsection"></m:Text>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

        <footer>
			<m:OverflowToolbar>
                <m:Title level="H1" text="Are you sure to save changes?" class="sapUiSmallMarginBegin" />
				<m:ToolbarSpacer />
				<m:Button type="Accept" text="Accept"/>
				<m:Button type="Reject" text="Reject"/>
			</m:OverflowToolbar>
		</footer>
        
	</ObjectPageLayout>


</mvc:XMLView>