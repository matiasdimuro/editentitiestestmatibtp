				</ObjectPageSubSection>
			</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" id="personal" title="Titulo ObjectPageSection">
            <heading>
                <m:Title text="Heading ObjectPageSection22222" />
            </heading>
				<subSections>
					<ObjectPageSubSection id="personalSS1" title="CCCCCCCCCCCCCC" titleUppercase="false">
						<blocks>
							<m:Text text="Texto dentro de subseccion"></m:Text>
						</blocks>
					</ObjectPageSubSection>

					<ObjectPageSubSection id="personalSS2" title="Titulo ObjectPageSection" titleUppercase="false">
